@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Web mua bán giày dép - Đăng ký</title>
    <link rel="icon" href="~/Content/icon.ico" />
    <link href="~/Content/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <a href="@Url.Action("Index","Home")"><img class="mt-md-3" src="~/Content/Header.png" /></a>
    <nav class="navbar navbar-expand-lg navbar-light mb-3">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">Trang chủ</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dangnhap", "Login")">Đăng nhập</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dangky","Login")">Đăng ký</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dangnhap", "Login")">Giỏ hàng</a>
                </li>
            </ul>
            <form class="form-inline mt-2 mt-lg-0" action="@Url.Action("Timkiem","Home")" method="post">
                <input class="form-control mr-lg-2" type="text" name="txtTukhoa" placeholder="Nhap tu khoa tim kiem..." />
                <button class="btn btn-success" type="submit">Tìm kiếm</button>
            </form>
        </div>
    </nav>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card border-success mb-3" style="width:35%">
                <div class="card-header bg-success ">
                    <h3 class="text-center text-white">Đăng ký thành viên</h3>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("Register", "Login")" method="post">
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="text" class="form-control" name="txtHoten" required>
                        </div>
                        <div class="form-group">
                            <label class="d-block">Giới tính</label>
                            <div class="custom-control custom-radio custom-control-inline ml-3">
                                <input type="radio" class="custom-control-input" id="defaultChecked" value="Nam" name="rdo" checked>
                                <label class="custom-control-label" for="defaultChecked">Nam</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="defaultUnchecked" value="Nữ" name="rdo">
                                <label class="custom-control-label" for="defaultUnchecked">Nữ</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Điện thoại</label>
                            <input type="tel" pattern="[0-9]{10}" class="form-control" name="txtSDT" required>
                            <small class="text-secondary">Nhập ít nhất 10 chữ số</small>
                        </div>
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input type="text" class="form-control" name="txtUsername" required>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="password" class="form-control" name="txtPassword" required>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="txtEmail" required>
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input type="text" class="form-control" name="txtDiachi" required>
                        </div>
                        <button type="submit" class="form-control btn btn-success">Đăng ký</button>
                    </form>
                    <a class="float-right mt-1" href="@Url.Action("Dangnhap","Login")">Đã có tài khoản, đăng nhập?</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
