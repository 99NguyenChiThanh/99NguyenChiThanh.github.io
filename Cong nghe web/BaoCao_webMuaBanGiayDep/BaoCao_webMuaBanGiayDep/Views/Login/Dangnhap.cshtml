@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Web mua bán giày dép - Đăng nhập</title>
    <link rel="icon" href="~/Content/icon.ico" />
    <link href="~/Content/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <a href="@Url.Action("Index","Home")"><img class="mt-md-3" src="~/Content/Header.png" /></a>
    <nav class="navbar navbar-expand-lg navbar-light mb-3">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">Trang chủ</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dangnhap", "Login")">Đăng nhập</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dangky","Login")">Đăng ký</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dangnhap", "Login")">Giỏ hàng</a>
                </li>
            </ul>
            <form class="form-inline mt-2 mt-lg-0" action="@Url.Action("Timkiem","Home")" method="post">
                <input class="form-control mr-lg-2" type="text" name="txtTukhoa" placeholder="Nhap tu khoa tim kiem..." />
                <button class="btn btn-success" type="submit">Tìm kiếm</button>
            </form>
        </div>
    </nav>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card border-success" style="width:35%">
                <div class="card-header bg-success ">
                    <h3 class="text-center text-white">Đăng nhập thành viên</h3>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("login", "Login")" method="post">
                        <div class="mb-2">
                            <label>Tên đăng nhập</label>
                            <input type="text" class="form-control" name="txtUsername" required>
                        </div>
                        @if (Session["kh"] == "Saitaikhoanhoacmatkhau")
                        {
                            <p class="text-danger">Sai tài khoản hoặc mật khẩu.</p>
                        }
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="password" class="form-control" name="txtPassword">
                        </div>
                        <button type="submit" class="form-control btn btn-success">Đăng nhập</button>
                    </form>
                    <a class="float-right mt-1" href="@Url.Action("Dangky","Login")">Chưa có tài khoản, đăng ký?</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
