@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Web mua bán giày dép</title>
    <link rel="icon" href="~/Content/icon.ico" />
    <link href="~/Content/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <a href="@Url.Action("Qlysanpham", "Qlysanpham")"><img class="mt-md-3" src="~/Content/Header.png" /></a>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card border-success" style="width:35%">
                <div class="card-header bg-success ">
                    <h3 class="text-center text-white">Thêm sản phẩm</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("InsertNew", "Qlysanpham", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
    <form action="@Url.Action("InsertNew", "Qlysanpham")" method="post">
        <div class="mb-2">
            <label>Tên sản phẩm</label>
            <input type="text" class="form-control" name="tensp" required>
        </div>
        <div class="mb-2">
            <label>Hình</label>
            <input type="file" class="form-control" name="FileUpload" required>
        </div>
        <div class="mb-2">
            <label>Mô tả</label>
            <input type="text" class="form-control" name="mota" required>
        </div>
        <div class="mb-2">
            <label>Size</label>
            <input type="number" class="form-control" name="size" required>
        </div>
        <div class="mb-2">
            <label>Loại sản phẩm</label>
            <select class="form-control" name="loai" required>
                <option selected></option>
                <option value="1">Giày Tây</option>
                <option value="2">Giày Bata</option>
                <option value="3">Giày Sandal</option>
                <option value="4">Dép</option>
            </select>
        </div>
        <div class="mb-2">
            <label>Đơn giá</label>
            <input type="number" class="form-control" name="dongia" required>
        </div>
        <div class="form-group">
            <label>Nhóm sản phẩm</label>
            <select class="form-control" name="nhom" required>
                <option selected></option>
                <option value="1">Người lớn</option>
                <option value="2">Học sinh</option>
                <option value="3">Trẻ em</option>
                <option value="4">Khác</option>
            </select>
        </div>
        <button type="submit" class="form-control btn btn-success">Xác nhận thêm</button>
    </form>
                    }
                    <a class="float-right mt-1 btn btn-info" href="@Url.Action("Qlysanpham", "Qlysanpham")">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
