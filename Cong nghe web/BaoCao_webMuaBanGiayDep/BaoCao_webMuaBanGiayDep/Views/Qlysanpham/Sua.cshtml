@{
    Layout = null;
    <title>Web mua bán giày dép</title>
    <link rel="icon" href="~/Content/icon.ico" />
    <link href="~/Content/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet" />
}
@using BaoCao_webMuaBanGiayDep.Models;
@model ChiTietSanPham

<a href="@Url.Action("Qlysanpham", "Qlysanpham")"><img class="mt-md-3" src="~/Content/Header.png" /></a>
<div class="container">
    <div class="d-flex justify-content-center mb-2">
        <div class="card border-success" style="width:35%">
            <div class="card-header bg-success ">
                <h3 class="text-center text-white">Sửa sản phẩm</h3>
            </div>
            <div class="card-body">
                <form action="@Url.Action("Edit", "Qlysanpham", new { masp=@Model.MaSP })" method="post">
                    <div class="mb-2">
                        <label>Tên sản phẩm</label>
                        <input type="text" class="form-control" value="@Model.TenSP" name="tensp" required>
                    </div>
                    <div class="mb-2">
                        <label class="w-100">Hình</label>
                        <img class="rounded img-thumbnail m-1" style="width:50px" src="~/Content/Hinh/@Model.Hinh" />
                        <input type="file" class="form-control" name="hinh" required>
                    </div>
                    <div class="mb-2">
                        <label>Mô tả</label>
                        <input type="text" class="form-control" value="@Model.MoTa" name="mota" required>
                    </div>
                    <div class="mb-2">
                        <label>Size</label>
                        <input type="number" class="form-control" name="size" value="@Model.Size" required>
                    </div>
                    <div class="mb-2">
                        <label>Loại sản phẩm</label>
                        <input type="text" class="form-control" value="@Model.MaLoai" name="loai" readonly required>
                    </div>
                    <div class="mb-2">
                        <label>Đơn giá</label>
                        <input type="number" class="form-control" name="dongia" value="@Model.Gia" required>
                    </div>
                    <div class="form-group">
                        <label>Nhóm sản phẩm</label>
                        <input type="text" class="form-control" value="@Model.MaNhom" name="nhom" readonly required>
                    </div>
                    <button type="submit" class="form-control btn btn-success">Xác nhận sửa</button>
                </form>
                <a class="float-right mt-1 btn btn-info" href="@Url.Action("Qlysanpham", "Qlysanpham")">Quay lại</a>
            </div>
        </div>
    </div>
</div>
